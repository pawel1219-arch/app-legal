<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Produktu Zara</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; padding: 50px; }
        img { max-width: 300px; border-radius: 10px; }
        .price-container { font-size: 24px; margin-top: 20px; color: #333; }
        .price-current__amount { font-weight: bold; }
    </style>
</head>
<body>

    <h1>Kurtka Testowa Puchowa</h1>
    <img src="https://static.zara.net/photos///2023/I/0/2/p/3046/231/800/2/w/850/3046231800_6_1_1.jpg?ts=1697013645069" alt="Kurtka">
    
    <div class="price-container">
        Cena: <span class="price-current__amount">299.00 PLN</span>
    </div>

    <script type="application/ld+json" id="json-ld">
    {
      "@context": "http://schema.org",
      "@type": "Product",
      "name": "Kurtka Testowa Puchowa",
      "image": "https://static.zara.net/photos///2023/I/0/2/p/3046/231/800/2/w/850/3046231800_6_1_1.jpg",
      "offers": {
        "@type": "Offer",
        "priceCurrency": "PLN",
        "price": "299.00"
      }
    }
    </script>

    <script>
        // Ten skrypt zmienia cenę na ekranie co 10 sekund
        setInterval(() => {
            const randomPrice = (Math.random() * (300 - 100) + 100).toFixed(2);
            
            // 1. Zmień tekst widoczny dla oka
            document.querySelector('.price-current__amount').innerText = randomPrice + ' PLN';
            
            // 2. Zmień dane w JSON-LD (Scraper tego nie zobaczy przez fetch, ale przeglądarka tak)
            const jsonElement = document.getElementById('json-ld');
            const data = JSON.parse(jsonElement.textContent);
            data.offers.price = randomPrice;
            jsonElement.textContent = JSON.stringify(data, null, 2);

            console.log("Cena zmieniona na: " + randomPrice);
        }, 10000); // 10000 ms = 10 sekund
    </script>

</body>
</html>
